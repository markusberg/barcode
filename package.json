{
  "name": "barcode",
  "version": "1.0.0",
  "description": "Web application for generating DLT and LTO barcodes",
  "main": "index.js",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:buildah": "buildah bud --tag=$npm_package_name .",
    "build:publish": "podman save $npm_package_name | ssh -C fahrenheit.kelvin.nu 'docker load'",
    "build:image": "docker build --tag $npm_package_name .",
    "prep": "npm install && husky && chmod ug+x .husky/*",
    "publish": "npm run build:buildah && npm run build:publish",
    "test": "npm run test --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/markusberg/barcode.git"
  },
  "keywords": [
    "barcode",
    "lto",
    "dlt",
    "tape",
    "backup"
  ],
  "author": "Markus Berg <markus@kelvin.nu>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/markusberg/barcode/issues"
  },
  "homepage": "https://github.com/markusberg/barcode#readme",
  "dependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2"
  }
}
