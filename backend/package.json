{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend of barcode generator",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:prep && npm run build:bundle && npm run build:typecheck",
    "build:prep": "rimraf dist && mkdir dist && cp -r src/views dist/views",
    "build:bundle": "node esbuild.js",
    "build:typecheck": "tsc -p ./tsconfig.prod.json --emitDeclarationOnly",
    "debug": "nodemon -e ts -w ./src --exec 'npm run build && node --enable-source-maps --inspect ./dist/www.mjs'",
    "test": "echo jest --coverage",
    "test:watch": "jest --watchAll",
    "test:watch:coverage": "jest --watchAll --coverage"
  },
  "author": "Markus Berg <markus@kelvin.nu>",
  "license": "Apache-2.0",
  "dependencies": {
    "bwip-js": "^4.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-status-codes": "^2.2.0",
    "morgan": "^1.10.0",
    "pdfkit": "^0.13.0",
    "pug": "^3.0.2",
    "validator": "^13.11.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/morgan": "^1.9.5",
    "@types/node": "^18.11.7",
    "@types/pdfkit": "^0.12.10",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.11.1",
    "esbuild": "^0.19.2",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  }
}
