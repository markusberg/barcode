{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend of barcode generator",
  "type": "module",
  "scripts": {
    "build": "npm run build:prep && npm run build:tsc",
    "build:prep": "mkdir -p dist && cp -r src/views dist/views",
    "build:tsc": "tsc -p ./tsconfig.prod.json",
    "debug": "nodemon -e ts -w ./src --exec 'npm run build && node --enable-source-maps --inspect ./dist/www.js'",
    "test": "echo vitest run --coverage",
    "test:watch": "vitest watch",
    "test:watch:coverage": "vitest watch --coverage"
  },
  "author": "Markus Berg <markus@kelvin.nu>",
  "license": "Apache-2.0",
  "dependencies": {
    "@markusberg/key-value-parser": "^0.3.0",
    "bwip-js": "^4.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0",
    "pdfkit": "^0.15.0",
    "pug": "^3.0.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.6",
    "@types/pdfkit": "^0.13.4",
    "@vitest/coverage-v8": "^1.6.0",
    "nodemon": "^3.1.4",
    "typescript": "~5.4.5",
    "vitest": "^1.6.0"
  }
}
