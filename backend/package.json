{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend of barcode generator",
  "type": "module",
  "scripts": {
    "build": "npm run build:prep && npm run build:prod",
    "build:prep": "mkdir -p dist && rm -fr dist/views && cp -r src/views dist/views",
    "build:prod": "tsc -p ./tsconfig.prod.json",
    "clean": "rm -rf ./dist",
    "debug": "nodemon -e ts -w ./src --exec 'npm run build && node --enable-source-maps --inspect ./dist/www.js'",
    "test": "echo no tests yet"
  },
  "author": "Markus Berg <markus@kelvin.nu>",
  "license": "Apache-2.0",
  "dependencies": {
    "@markusberg/key-value-parser": "^1.0.3",
    "bwip-js": "^4.8.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.1",
    "pdfkit": "^0.17.2",
    "pug": "^3.0.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^22.18.6",
    "@types/pdfkit": "^0.17.4",
    "nodemon": "^3.1.11",
    "typescript": "~5.9.3"
  }
}
