{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "sourceMap": true,
    "lib": ["ES2022", "DOM"],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "declaration": true,
    "incremental": true,

    "allowJs": false,
    "preserveConstEnums": true,

    "outDir": "./dist",
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
